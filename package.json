{
  "name": "openin",
  "version": "1.0.0",
  "description": "Browser extension to add 'Open in VS Code' buttons to source code pages.",
  "main": "src/background/background.js",
  "scripts": {
    "build": "echo 'No build step required'",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "try:edge": "start msedge --argumentlist \"--load-extension=$($pwd.Path)\"",
    "package:crx": "web-ext build --overwrite-dest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/david-risney/OpenIn.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/david-risney/OpenIn/issues"
  },
  "homepage": "https://github.com/david-risney/OpenIn#readme",
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "web-ext": "^8.6.0"
  }
}
